<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistrationStep1">


    <ImageView
        android:id="@+id/imgViewStep1Top"
        android:layout_width="422dp"
        android:layout_height="149dp"
        android:forceDarkAllowed="false"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backsmall"
        tools:layout_editor_absoluteX="-3dp" />

    <ImageView
        android:id="@+id/imgViewStep1LogoSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imgViewStep1Top"
        app:layout_constraintTop_toTopOf="@+id/imgViewStep1Top"
        app:srcCompat="@drawable/logosmall" />

    <TextView
        android:id="@+id/lblStep1Registracija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/registration"
        android:textColor="@color/tree_green"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imgViewStep1Top"
        app:layout_constraintTop_toTopOf="@+id/imgViewStep1Top" />

    <ImageView
        android:id="@+id/imgViewStep1Step2"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgViewStep1Top"
        app:srcCompat="@drawable/step2white" />

    <ImageView
        android:id="@+id/imgViewStep1Step3"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginStart="214dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgViewStep1Top"
        app:srcCompat="@drawable/step3white" />

    <ImageView
        android:id="@+id/imgViewStep1Step4"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginStart="299dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgViewStep1Top"
        app:srcCompat="@drawable/step4white" />

    <ImageView
        android:id="@+id/imgViewStep1Step1"
        android:layout_width="63dp"
        android:layout_height="51dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="133dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgViewStep1Top"
        app:srcCompat="@drawable/step1green" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="117dp"
        android:layout_height="131dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="99dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewStep1Top"
        app:srcCompat="@drawable/profileplaceholder" />

    <TextView
        android:id="@+id/lblStep1UserData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:text="@string/step1"
        android:textColor="@color/tree_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarStep1" />

    <TextView
        android:id="@+id/lblLogInStep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:forceDarkAllowed="false"
        android:text="@string/already_have_account"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStep1Next"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtBoxStep1Name"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/tree_green"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textColor="@color/tree_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile" />

    <EditText
        android:id="@+id/txtBoxStep1Surname"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="29dp"
        android:backgroundTint="@color/tree_green"
        android:ems="10"
        android:hint="@string/surname"
        android:inputType="textPersonName"
        android:textColor="@color/tree_green"
        android:textColorHighlight="@color/tree_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBoxStep1Name" />

    <EditText
        android:id="@+id/txtStep1Date"
        android:layout_width="318dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/tree_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBoxStep1Surname" />

    <ProgressBar
        android:id="@+id/progressBarStep1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="317dp"
        android:layout_height="17dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/tree_green"
        android:progress="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewStep1Step1" />

    <Button
        android:id="@+id/btnStep1Next"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/tree_green"
        android:onClick="OpenRegistrationStep2"
        android:text="@string/step1_next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStep1Date" />

    <TextView
        android:id="@+id/btnLogInStep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:onClick="OpenLogIn"
        android:text="@string/login"
        android:textColor="@color/tree_green"
        app:layout_constraintStart_toEndOf="@+id/lblLogInStep1"
        app:layout_constraintTop_toBottomOf="@+id/btnStep1Next" />

    <TextView
        android:id="@+id/lblStep1Profile"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        android:forceDarkAllowed="false"
        android:text="@string/profilepicture"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toEndOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/progressBarStep1" />

</androidx.constraintlayout.widget.ConstraintLayout>