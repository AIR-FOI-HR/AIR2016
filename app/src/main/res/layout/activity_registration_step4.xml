<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationStep4">

    <Button
        android:id="@+id/btnStep3ResendMail2"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/tree_green"
        android:fontFamily="@font/roboto"
        android:text="@string/NewsFeed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgViewStep4Top"
        android:layout_width="422dp"
        android:layout_height="149dp"
        android:forceDarkAllowed="false"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backsmall"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:id="@+id/lblStep3Registracija2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/registration"
        android:textColor="@color/tree_green"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgViewStep4LogoSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosmall" />

    <ImageView
        android:id="@+id/imgViewStep4Step2"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/step2white" />

    <ImageView
        android:id="@+id/imgViewStep4Step3"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginStart="214dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/step3white" />

    <ImageView
        android:id="@+id/imgViewStep4Step4"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginStart="299dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/step4green" />

    <ImageView
        android:id="@+id/imgViewStep4Step1"
        android:layout_width="63dp"
        android:layout_height="51dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/step1white" />

    <TextView
        android:id="@+id/lblStep4AllDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="@string/AllDone"
        android:textAlignment="viewEnd"
        android:textColor="@color/tree_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarStep4" />

    <ProgressBar
        android:id="@+id/progressBarStep4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="317dp"
        android:layout_height="17dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/tree_green"
        android:progress="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewStep4Step1" />

    <TextView
        android:id="@+id/lblStep4AccountCreated"
        android:layout_width="233dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/AccountCreated"
        android:textAlignment="center"
        android:textColor="@color/tree_green"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lblStep4PlantATree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblStep4PlantATree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/roboto"
        android:text="@string/PlantATree"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnStep3ResendMail2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>